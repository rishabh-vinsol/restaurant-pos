<tr>
  <td><%= ingredient.id %></td>
  <td><%= image_tag ingredient.image, height: 50 if ingredient.image.attached?%></td>
  <td><%= ingredient.name %></td>
  <td><%= ingredient.non_veg ? "Non-Veg" : "Veg" %></td>
  <td><%= ingredient.price_per_portion %></td>
  <td><%= ingredient.extra_request %></td>
  <td>
    <div class= "d-flex">
      <%= link_to 'Edit', edit_ingredient_path(ingredient), class: 'btn btn-primary btn-sm me-2' %>
      <%= button_to 'Delete', ingredient_path(ingredient), method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: 'Are you sure you want to delete this user?'} %>
    </div>
  </td>
</tr>

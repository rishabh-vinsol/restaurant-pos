<fieldset>
  <div class= "container mb-3">
    <div class="meal-ingredient-fields">
      <div class="row">
        <div class="col-md-6 mb-3">
          <%= form.label :ingredient_id, "Name", class: "form-label" %>
          <%= form.collection_select :ingredient_id, Ingredient.all, :id, :name, { prompt: "Select one" }, { class: "form-select" } %>
        </div>
        <div class="col-md-6 mb-3">
          <%= form.label :ingredient_quantity, 'Quantity', class: "form-label" %>
          <%= form.number_field :ingredient_quantity, class: "form-control" %>
        </div>
      </div>
      <div>
        <%= form.hidden_field :_destroy %>
        <%= link_to 'Remove', '#', class: 'remove_fields btn btn-danger btn-sm' %>
      </div>
    </div>
  </div>
</fieldset>

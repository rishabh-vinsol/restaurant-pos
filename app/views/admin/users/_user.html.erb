<tr class=<%= 'table-success' if user.role == 'admin' %>>
  <td><%= user.id %></td>
  <td><%= user.first_name %></td>
  <td><%= user.last_name %></td>
  <td><%= user.email %></td>
  <td>
    <div class= "d-flex">
      <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-primary btn-sm me-2' %>
      <%= button_to 'Delete', user_path(user), method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: 'Are you sure you want to delete this user?'} %>
    </div>
  </td>
</tr>

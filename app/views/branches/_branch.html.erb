<tr class=<%= 'table-success' if branch.default %>>
  <td><%= branch.id %></td>
  <td><%= branch.name %></td>
  <td><%= branch.opening_time.strftime("%H:%M") %></td>
  <td><%= branch.closing_time.strftime("%H:%M") %></td>
  <td>
    <div class= "d-flex">
      <%= link_to 'Edit', edit_branch_path(branch), class: 'btn btn-primary btn-sm me-2' %>
      <%= link_to 'Inventory', branch_inventories_path(branch), class: 'btn btn-primary btn-sm me-2' %>
      <%= button_to 'Delete', branch_path(branch), method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: 'Are you sure you want to delete this branch?'} %>
    </div>
  </td>
</tr>

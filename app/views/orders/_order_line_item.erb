<tr>
  <td>
    <div class="d-flex mb-2">
      <div class="flex-shrink-0">
      <% if order_line_item.meal.image.attached? %>
        <%= image_tag order_line_item.meal.image, width:'35', class:'img-fluid' %>
      <% else %>
        <%= image_tag 'coming-soon.jpg', width:'35', class:'img-fluid', alt: 'Image Coming Soon' %>
      <% end %>
      </div>
      <div class="flex-lg-grow-1 ms-3">
        <h6 class="small mb-0"><a href="#" class="text-reset"><%= order_line_item.meal.name %></a></h6>
        <span class="small"><%= order_line_item.meal.type %></span>
      </div>
    </div>
  </td>
  <td><%= order_line_item.quantity %></td>
  <td class="text-end">Rs. <%= order_line_item.total %></td>
</tr>

<p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Forgot Password</p>
<%= form_with class:"mx-1 mx-md-4" do |form| %>
  <div class="d-flex flex-row align-items-center mb-4">
    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
    <div class="form-outline flex-fill mb-0">
      <%= render 'shared/notice' %>
    </div>
  </div>
  <div class="d-flex flex-row align-items-center mb-4">
    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
    <div class="form-outline flex-fill mb-0">
      <%= form.label :email, "Enter the email", class:"form-label" %>
      <%= form.text_field :email, class:"form-control"%>
    </div>
  </div>
  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
    <%= form.submit "Reset", class:"btn btn-primary btn-lg" %>
  </div>
<% end %>

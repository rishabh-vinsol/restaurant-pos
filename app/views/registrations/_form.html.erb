<%= form_with(model: user, url: signup_path)  do |form| %>
  <%= render 'shared/errors', model: user, model_name: 'user' %>
  <div class="mb-3">
    <%= form.label :first_name, class:"form-label"%>
    <%= form.text_field :first_name, class:"form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :last_name, class:"form-label"%>
    <%= form.text_field :last_name, class:"form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :email, class:"form-label"%>
    <%= form.email_field :email, class:"form-control" %>
  </div>
  <div class="container mt-4">
    <%= render partial: 'shared/address', locals: { form: form, address: user.address || user.build_address } %>
  </div>
  <div class="mb-1">
    <%= form.label :password, class:"form-label"%>
    <%= form.password_field :password, class:"form-control" %>
  </div>
  <div class="d-flex flex-row align-items-center mb-3">
    <%= form.check_box :show_password, onchange: "showPassword()", class: "form-check-input me-2" %>
    <%= form.label :show_password, 'Show password', class: 'form-check-label' %>
  </div>
  <div class="mb-5">
    <%= form.label :password_confirmation, class:"form-label" %>
    <%= form.password_field :password_confirmation, class:"form-control"%>
  </div>
  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
    <%= form.submit class:"btn btn-primary btn-lg" %>
  </div>
<% end %>

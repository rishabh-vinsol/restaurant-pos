<p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Login</p>
<%= form_with do |form| %>
  <div class="mb-3">
    <%= render 'shared/notice' %>
  </div>
  <div class="mb-3">
    <%= form.text_field :email, class:"form-control"%>
    <%= form.label :email, class:"form-label" %>
  </div>
  <div class="">
    <%= form.password_field :password, id: 'user_password', class:"form-control"%>
    <%= form.label :password, class:"form-label" %>
  </div>
  <div class="d-flex flex-row align-items-center mb-2">
    <%= form.check_box :show_password, onchange: "showPassword()", class: "form-check-input me-2" %>
    <%= form.label :show_password, 'Show password', class: 'form-check-label' %>
  </div>
  <div class="d-flex flex-row align-items-center mb-4">
      <%= form.check_box :remember_me, class: "form-check-input me-2", id: "remember-me" %>
      <%= form.label :remember_me, "Remember me", class: "form-check-label", for: "remember-me" %>
  </div>
  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4 mt-4">
    <%= form.submit "Login", class:"btn btn-primary btn-lg" %>
  </div>
<% end %>
<div class = "text-center">
  <div class="form-outline flex-fill mb-0">
    <%= link_to 'Forgot Password?', forgot_password_path %>
  </div>
  <div class="form-outline flex-fill mb-0">
    New User? Click <%= link_to 'here', signup_path  %> to signup
  </div>
</div>

<% if model.errors.any? %>
  <div class="alert alert-danger">
    <h3><%= pluralize(model.errors.count, "error") %>
      prohibited this <%= model_name %> from being saved:</h2>
    <ul>
      <% model.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
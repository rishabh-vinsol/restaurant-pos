<%= form_with(model: user, url: signup_path, class:"mx-1 mx-md-4")  do |form| %>
  <%= render 'shared/errors', model: user, model_name: 'user' %>
  <div class="mb-3">
    <%= form.text_field :first_name, class:"form-control" %>
    <%= form.label :first_name, class:"form-label"%>
  </div>
  <div class="mb-3">
    <%= form.text_field :last_name, class:"form-control" %>
    <%= form.label :last_name, class:"form-label"%>
  </div>
  <div class="mb-3">
    <%= form.email_field :email, class:"form-control" %>
    <%= form.label :email, class:"form-label"%>
  </div>
  <div class="mb-3">
    <%= form.password_field :password, class:"form-control" %>
    <%= form.label :password, class:"form-label"%>
  </div>
  <div class="d-flex flex-row align-items-center mb-5">
    <%= form.check_box :show_password, onchange: "showPassword()", class: "form-check-input me-2" %>
    <%= form.label :show_password, 'Show password', class: 'form-check-label' %>
  </div>
  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
    <%= form.submit class:"btn btn-primary btn-lg" %>
  </div>
<% end %>
